<h1>Patient's Appointments</h1>
<h3><%= @patient.name %></h3>

<% @patient.appointments.each do |a| %>
  <% @doctor = @patient.doctors.find(a.doctor_id) %>
  <%= link_to @doctor.name, doctor_path(@doctor) %> - <%= link_to a.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(a) %><br>
<% end %>